@page
@model crudsweb3.Pages.DeleteModel
@{
    ViewData["Title"] = "Eliminar tarea";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-page="./Index" class="btn btn-back me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 m-0 title-text">Eliminar Tarea</h1>
            <p class="text-muted mb-0">Confirmar eliminación de tarea del sistema</p>
        </div>
    </div>

    <div class="alert alert-custom-warning" role="alert">
        <div class="d-flex">
            <div class="alert-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div>
                <h4 class="alert-heading">¿Estás seguro que deseas eliminar esta tarea?</h4>
                <p class="mb-0">Esta acción es permanente y no se puede deshacer. La tarea será eliminada completamente del sistema.</p>
            </div>
        </div>
    </div>

    <div class="card custom-card mb-4">
        <div class="card-header custom-card-header">
            <h5 class="m-0"><i class="fas fa-info-circle me-2"></i>Detalles de la Tarea</h5>
        </div>
        <div class="card-body">
            <div class="detail-grid">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(m => m.Tarea.nombreTarea)
                    </div>
                    <div class="detail-value">@Html.DisplayFor(m => m.Tarea.nombreTarea)</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-calendar-day me-2"></i>@Html.DisplayNameFor(m => m.Tarea.fechaVencimiento)
                    </div>
                    <div class="detail-value">
                        @{
                            var mostrado = string.Format("{0:dd/MM/yyyy HH:mm}", Model.Tarea.fechaVencimiento);
                        }
                        <span class="date-badge">@mostrado</span>
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-status me-2"></i>@Html.DisplayNameFor(m => m.Tarea.estado)
                    </div>
                    <div class="detail-value">
                        @{
                            var estado = Model.Tarea.estado?.ToString() ?? "";
                            var badgeClass = "badge-secondary";

                            if (estado.ToLower().Contains("pendiente"))
                            {
                                badgeClass = "badge-warning";
                            }
                            else if (estado.ToLower().Contains("complet") || estado.ToLower().Contains("activo"))
                            {
                                badgeClass = "badge-success";
                            }
                            else if (estado.ToLower().Contains("inactivo") || estado.ToLower().Contains("cancelado"))
                            {
                                badgeClass = "badge-danger";
                            }
                        }
                        <span class="badge @badgeClass">@estado</span>
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-user me-2"></i>@Html.DisplayNameFor(m => m.Tarea.IdUsuario)
                    </div>
                    <div class="detail-value">
                        <span class="user-badge">@Html.DisplayFor(m => m.Tarea.IdUsuario)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" class="d-flex gap-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Tarea.Id" />
        <button type="submit" class="btn btn-danger btn-custom-delete">
            <i class="fas fa-trash-alt me-2"></i>Eliminar Permanentemente
        </button>
        <a asp-page="./Index" class="btn btn-outline-secondary btn-custom-outline">
            <i class="fas fa-times me-2"></i>Cancelar
        </a>
    </form>
</div>

<style>
    .title-text {
        color: #4a4a8c;
        font-weight: 700;
    }

    .btn-back {
        background-color: #f8f9ff;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        color: #4a5568;
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: #edf2f7;
            transform: translateX(-2px);
        }

    /* advertencia */
    .alert-custom-warning {
        background-color: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
        border-radius: 12px;
        color: #856404;
        padding: 20px;
        margin-bottom: 24px;
    }

    .alert-icon {
        font-size: 1.5rem;
        margin-right: 15px;
        color: #ffc107;
    }

    .alert-heading {
        font-weight: 600;
        margin-bottom: 8px;
        color: #856404;
    }

    .custom-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .custom-card-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 1px solid #e2e8f0;
        padding: 16px 20px;
        font-weight: 600;
        color: #4a4a8c;
    }

    .detail-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #f1f3f6;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

    .detail-label {
        flex: 0 0 250px;
        font-weight: 600;
        color: #4a5568;
        display: flex;
        align-items: center;
    }

    .detail-value {
        flex: 1;
        color: #2d3748;
        font-weight: 500;
    }

    .date-badge {
        background-color: #f3f6ff;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        color: #4a4a8c;
        font-weight: 500;
    }

    .user-badge {
        background-color: #edf2f7;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        color: #4a5568;
        font-weight: 500;
    }

    .badge {
        padding: 8px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge-success {
        background-color: rgba(40, 167, 69, 0.15) !important;
        color: #28a745;
    }

    .badge-warning {
        background-color: rgba(255, 193, 7, 0.15) !important;
        color: #ffc107;
    }

    .badge-danger {
        background-color: rgba(220, 53, 69, 0.15) !important;
        color: #dc3545;
    }

    .badge-secondary {
        background-color: rgba(108, 117, 125, 0.15) !important;
        color: #6c757d;
    }

    .btn-custom-delete {
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }

        .btn-custom-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(220, 53, 69, 0.2);
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
        }

    .btn-custom-outline {
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        border: 1px solid #e2e8f0;
        color: #4a5568;
    }

        .btn-custom-outline:hover {
            background-color: #f8f9ff;
            border-color: #cbd5e0;
            color: #4a5568;
            transform: translateY(-2px);
        }
</style>

